{
    "openapi": "3.0.3",
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "User application port"
        },
        {
            "url": "http://localhost:6000",
            "description": "Manufactor application port"
        }
    ],
    "tags": [
        {
            "name": "user",
            "description": "User application API"
        },
        {
            "name": "store",
            "description": "Manufactor application API"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "servers": [
                    {
                        "url": "http://localhost:3000",
                        "description": "User application port"
                    }
                ],
                "summary": "Logs user into the system",
                "description": "",
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "type": "string"
                            },
                            "example": {
                                "email": "trinhcuong297@gmail.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": {
                                    "id": "67698e73876ef97e66fc4aac",
                                    "name": "Trinh Cuong",
                                    "email": "trinhcuong297@gmail.com",
                                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2NzY5OGU3Mzg3NmVmOTdlNjZmYzRhYWMiLCJpYXQiOjE3MzQ5NzE5MjUsImV4cCI6MTczNTE0NDcyNX0.rLNVXX8eFtT_VFP_oWeKK6Fsm-_VVLlJFDnQFVkpbXQ"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Invalid email/password supplied",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": {
                                    "message": "Wrong authentication infomation!"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Cannot update token to server",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": {
                                    "message": "Cannot update token to server"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signup": {
            "post": {
                "tags": [
                    "user"
                ],
                "servers": [
                    {
                        "url": "http://localhost:3000",
                        "description": "User application port"
                    }
                ],
                "summary": "Sign up user into the system",
                "description": "",
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "type": "string"
                            },
                            "example": {
                                "name": "Trinh Cuong",
                                "email": "trinhcuong297@gmail.com",
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": {
                                    "name": "Trinh Cuong", 
                                    "email": "trinhcuong297@gmail.com"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/device/all": {
            "get": {
                "tags": [
                    "user"
                ],
                "servers": [
                    {
                        "url": "http://localhost:3000",
                        "description": "User application port"
                    }
                ],
                "summary": "Show all devices",
                "description": "",
                "responses": {
                    "200": {
                        "description": "successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": {
                                    "devices": []
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "ACCESS_TOKEN": []
                    },
                    {
                        "CLIENT_ID": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 10
                    },
                    "username": {
                        "type": "string",
                        "example": "theUser"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345"
                    },
                    "userStatus": {
                        "type": "integer",
                        "description": "User Status",
                        "format": "int32",
                        "example": 1
                    }
                }
            }
        },
        "securitySchemes": {
            "ACCESS_TOKEN": {
                "type": "apiKey",
                "name": "ACCESS_TOKEN",
                "in": "header"
            },
            "CLIENT_ID": {
                "type": "apiKey",
                "name": "CLIENT_ID",
                "in": "header"
            }
        }
    }
}