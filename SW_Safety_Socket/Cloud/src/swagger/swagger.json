    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345"
                    }
                }
            },
            "Device": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "mac": {
                        "type": "string"
                    },
                    "devicePublic": {
                        "type": "string"
                    },
                    "deviceSecret": {
                        "type": "string"
                    },
                    "value": {
                        "type": "object"
                    },
                    "ownUser": {
                        "type": "string"
                    },
                    "meshNetwork": {
                        "type": "string"
                    }
                }
            },
            "History": {
                "type": "object",
                "properties": {
                    "device": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "integer"
                    }
                }
            },
            "Key": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "string"
                    },
                    "accessToken": {
                        "type": "string"
                    }
                }
            },
            "Mesh": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "meshId": {
                        "type": "string"
                    },
                    "meshPass": {
                        "type": "string"
                    }
                }
            },
            "Timer": {
                "type": "object",
                "properties": {
                    "device": {
                        "type": "string"
                    },
                    "timeset": {
                        "type": "integer"
                    },
                    "value": {
                        "type": "object"
                    },
                    "active": {
                        "type": "string"
                    },
                    "retry": {
                        "type": "integer"
                    },
                    "preset": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "ACCESS_TOKEN": {
                "type": "apiKey",
                "name": "ACCESS_TOKEN",
                "in": "header"
            },
            "CLIENT_ID": {
                "type": "apiKey",
                "name": "CLIENT_ID",
                "in": "header"
            }
        }
    }
